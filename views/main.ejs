<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
        rel="stylesheet" 
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
        crossorigin="anonymous"
    >

    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <title>CSVuploads</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary fixed-top bg-danger-subtle">
        <a class="navbar-brand" href="#">CsvUpload</a>
    </nav>
    <div class="container" >
        <div class=" nav justify-content-center" style="margin-top:100px;">
            <div class="card border-warning mb-3 " style="max-width: 25rem;box-shadow: 2px 3px 3px 4px gray">
                <div class="card-header bg-success">
                    <h5 style="font-family: Nunito; font-style: italic ; font-weight: 600;">Upload csv file</h5>
                </div>
                <div class="card-body" style="background-color: rgb(176, 248, 224);">
                    <form action="/" method="post" enctype="multipart/form-data">
                        <input type="file" name="csv"><br><br>
                        <div class="text-center"><button type="submit" class="btn btn-success">Submit</button></div>
                    </form>
                </div>
            </div>
        </div>
        <br>
        <%if(data){%>
            <div>
                <table class="table table-hover table-responsive table-stripped nav justify-content-center" style="width: auto" > 
                    <thead>
                        <tr class="bg-primary">
                            <th>S.no</th>
                            <th style="padding-right: 1em">LastName</th>
                            <th style="padding-right: 1em">FirstName</th>
                            <th style="padding-right:2em;padding-left:3em;">SSN</th>
                            <th>Test1</th>
                            <th>Test2</th>
                            <th>Test3</th>
                            <th>Test4</th>
                            <th style="padding-right: 1em">Final</th>
                            <th>Grade</th>
                        </tr>
                    </thead>
                    <tbody style="overflow-x: scroll; height:350px;box-shadow: 2px 3px 3px 4px gray" class="table-bordered">
                        <%for(var i=0;i< data.length;i++){%>
                        <tr class="text-center">
                                      <td ><%= i+1%></td>
                                      <td style="padding-right: 1em"><%= data[i].LastName%></td>
                                      <td style="padding-left: 1em;"><%= data[i].FirstName%></td>
                                      <td style="padding-right:1em;padding-left:1em;"><%= data[i].SSN%></td>
                                      <td style="padding-left: 1em"><%= data[i].Test1%></td>
                                      <td style="padding-left: 1em"><%= data[i].Test2%></td>
                                      <td style="padding-left: 1em"><%= data[i].Test3%></td>
                                      <td style="padding-left: 1.2em"><%= data[i].Test4%></td>
                                      <td style="padding-left: 1.2em"><%= data[i].Final%></td>
                                      <td style="padding-left: 1.2em"><%= data[i].Grade%></td>
                        </tr>
                        <% } %>
                    </tbody>
            </table>
            </div>
        <%}%>
        <br>
    </body>
</html>